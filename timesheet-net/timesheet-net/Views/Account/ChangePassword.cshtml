
@{
    ViewBag.Title = "Zmiana hasła";
}

<h2 style="color:#6f0c3b"><b>Zmiana hasła</b></h2>
<div class="alert alert-info">
    W tej sekcji możesz zmienić hasło do konta. Pamiętaj, by wypełnić wszystkie pola. <br />
    <b>Nowe hasło powinno mieć:</b> co najmniej 8 znaków, minimum 1 cyfrę, minimum 1 wielką literę, minimum 1 małą literę.
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (ViewData["Message"] != null){
        if (ViewData["Message"].ToString() == "OK")
        {
            <div>
                <div class="alert alert-success">
                    Hasło zostało pomyślnie zmienione!
                </div>
            </div>
        }
        else
        {
            <div>
                <div class="alert alert-danger">
                    <strong>Błąd!</strong> @ViewData["Message"].ToString()
                </div>
            </div>
        }
    }


    <div class="form-horizontal">
        <hr />
        <!--Html.ValidationSummary(true, "", new { class = "text-danger" })-->
        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail2">Hasło1</label>
            <input type="password" name="pass" class="form-control" style="margin-left: 14px; width:300px" placeholder="Wprowadź stare hasło" required>
        </div>
        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail2">Hasło2</label>
            <input type="password" name="pass" class="form-control" style="margin-left: 14px; width:300px" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" placeholder="Wprowadź nowe hasło" required>
        </div>
        <div class="form-group">
            <label class="sr-only" for="exampleInputEmail2">Hasło3</label>
            <input type="password" name="pass" class="form-control" style="margin-left: 14px; width:300px" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" placeholder="Powtórnie wprowadź nowe hasło" required>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#myModal" role="button" class="btn btn-default btn-main" style="width:100px" data-toggle="modal" data-backdrop="static">Zmień</a>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog" style="width:300px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Potwierdzenie</h4>
                </div>
                <div class="modal-body">
                    <p>Czy na pewno chcesz zmienić hasło?</p>
                    <p class="text-warning" style="color:#808080"><small>Jeśli zamkniesz, zmiany będą utracone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-main" data-dismiss="modal" style="width:80px; background-color:#43b0ff">Zamknij</button>
                    <input type="submit" value="Zmień" class="btn btn-default btn-main" style="width:80px"/>
                </div>
            </div>
        </div>
    </div>



}

<div>
    @Html.ActionLink("Powrót do strony głównej", "Index", "Home")
</div>
