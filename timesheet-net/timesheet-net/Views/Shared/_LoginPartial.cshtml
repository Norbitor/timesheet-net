@if (Session["EmployeeID"] != null)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav class="nav navbar-nav navbar-right" style="padding-left:3px">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li class="dropdown" style="width:115px; text-align:center" >
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Pracuj<span class="caret"></span></a>
                        <ul class="dropdown-menu" style="width:115px;text-align:left">
                            <li class="dropdown-header" style="color: antiquewhite">Timesheety</li>
                            <li>
                                @Html.ActionLink("Aktualne", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Odrzucone", "Index", "Home")
                            </li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Projekty", "Index", "Home")</li>
                            @if ((int)Session["JobPosition"] == 1)
                            {
                                <li>@Html.ActionLink("Raporty", "Index", "Home")</li>
                                <li>@Html.ActionLink("Użytkownicy", "Index", "Home")</li>                               
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> @Session["NameSurname"]<span class="caret"></span></a>
                        <ul class="dropdown-menu" style="width:100%">
                            <li>@Html.ActionLink("Edytuj", "Edit", "Account")</li>
                            <li>@Html.ActionLink("Zmień hasło", "ChangePassword", "Account")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Wyloguj</a>
                    </li>
                </ul>
            </div>
        </nav>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Login", "Account")">
                Zaloguj się
                <span class="glyphicon glyphicon-log-in"></span>
            </a>
        </li>
    </ul>
}
