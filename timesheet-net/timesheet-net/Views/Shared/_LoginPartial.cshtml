@if (Session["EmployeeID"] != null)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <nav class="nav navbar-nav navbar-right" style="padding-left:3px">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li class="dropdown" style="width:115px; text-align:center">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Pracuj <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-main" style="width:115px;text-align:left">
                            <li class="dropdown-header" style="color: antiquewhite">Timesheety</li>
                            <li>
                                @Html.ActionLink("Aktualne", "Current", "Timesheet")
                            </li>
                            <li>
                                @Html.ActionLink("Odrzucone", "Disapproved", "Timesheet")
                            </li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Projekty", "Overview", "Project")</li>
                            @if ((int)Session["JobPosition"] == 1)
                            {
                                <li>@Html.ActionLink("Raporty", "Index", "Home")</li>
                                <li>@Html.ActionLink("Użytkownicy", "Index", "Home")</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> @Session["NameSurname"]<span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-menu-main" style="width:100%">
                            <li>@Html.ActionLink("Edytuj", "Edit", "Account")</li>
                            <li>@Html.ActionLink("Zmień hasło", "ChangePassword", "Account")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Wyloguj</a>
                    </li>
                </ul>
            </div>
        </nav>
    }
}
else
{    
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Zaloguj <span class="caret"></span></a>
            <ul id="login-dp" class="dropdown-menu">
                <li>
                    <div class="row">
                        <div class="col-md-12">
                            <form class="form" role="form" method="post" action="Account/Login" accept-charset="UTF-8" id="login-nav">
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputEmail2">E-Mail</label>
                                    <input type="email" name="email" class="form-control" id="exampleInputEmail2" placeholder="E-Mail" required>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputPassword2">Hasło</label>
                                    <input type="password" name="passwd" class="form-control" id="exampleInputPassword2" placeholder="Hasło" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-main btn-block" style="width:100%">Zaloguj</button>
                                </div>                            
                            </form>
                            </div>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
}

